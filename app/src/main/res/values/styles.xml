<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppText.Header" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="AppText.Header.Black">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppText.Header.White">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppText.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="AppText.Title.Black">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppText.Title.White">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppText.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="AppText.Body.Black">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppText.Body.White">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppButton.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>